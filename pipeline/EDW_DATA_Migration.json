{
	"name": "EDW_DATA_Migration",
	"properties": {
		"activities": [
			{
				"name": "Lookup1",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "SqlServerSource",
						"sqlReaderQuery": "select * from dbo.metadata",
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"dataset": {
						"referenceName": "DS_LH_SqlServerTable1",
						"type": "DatasetReference"
					},
					"firstRowOnly": true
				}
			},
			{
				"name": "get_tbl_name",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "Lookup1",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"variableName": "tbl_nm",
					"value": {
						"value": "@activity('Lookup1').output.firstRow.table_name",
						"type": "Expression"
					}
				}
			},
			{
				"name": "get inc_col",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "Lookup1",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"variableName": "inc_col",
					"value": "@activity('Lookup1').output.firstRow.incremental_col "
				}
			},
			{
				"name": "get_ind_dt",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "Lookup1",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"variableName": "ing_dt",
					"value": "@activity('Lookup1').output.firstRow.ingestion_dt "
				}
			},
			{
				"name": "getQuery",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "get_tbl_name",
						"dependencyConditions": [
							"Succeeded"
						]
					},
					{
						"activity": "get inc_col",
						"dependencyConditions": [
							"Succeeded"
						]
					},
					{
						"activity": "get_ind_dt",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"variableName": "qry",
					"value": {
						"value": "@concat('select * from ',variables('tbl_nm'),' where ',variables('inc_col'), ' = ',variables('ing_dt'))",
						"type": "Expression"
					}
				}
			}
		],
		"variables": {
			"tbl_nm": {
				"type": "String"
			},
			"inc_col": {
				"type": "String"
			},
			"ing_dt": {
				"type": "String"
			},
			"qry": {
				"type": "String"
			}
		},
		"folder": {
			"name": "azure _project pipelines"
		},
		"annotations": []
	}
}